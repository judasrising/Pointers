#include<stdio.h>

void two_largest(int arr[],int n, int *largest,int*second_largest)
{
    *largest=*second_largest=arr[0];

    for(int i=1; i<n; i++){
        if(arr[i]>*largest){
            *second_largest=*largest;
            *largest=arr[i];
        }
        else if(arr[i]>*second_largest)
            *second_largest=arr[i];
    }
}

int main()
{
    int size,larg,s_larg;
    printf("Enter size: ");scanf("%d",&size);
    int array[size];

    printf("Enter elements: ");
    for(int i=0; i<size; i++)
        scanf("%d",&array[i]);

    two_largest(array,size,&larg,&s_larg);

    printf("Largest= %d\nSecond Largest= %d",larg,s_larg);
}


/******** Easier Way *******

#include<stdio.h>

int *secondmax(int arr[], int size)
{
    int *smax,max,i;
    max=arr[0];
    smax=arr;

    for(i=0; i<size; i++){
        if(arr[i]>max)
            max=arr[i];
    }
    for(i=0; i<size; i++){
        if(arr[i]>*smax && arr[i]!=max)
            smax=&arr[i];
    }

    return smax;
}

int main()
{
    int size;
    printf("Enter array size: ");scanf("%d",&size);

    int arr[size];

    printf("Enter elements ");
    for(int i=0; i<size; i++)
        scanf("%d",&arr[i]);

    printf("\nSecond largest number= %d",*secondmax(arr,size));
}

