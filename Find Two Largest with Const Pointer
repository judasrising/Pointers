#include<stdio.h>
#define N 5

void find_two_largest(const int *a, int n, int *largest, int *second_largest)
{
    int count=0;

    for(; count<n; count++,a++){
        if(*a>*largest){
            *second_largest=*largest;
            *largest=*a;
        }
    }
    printf("Largest number= %d\nSecond largest number= %d",*largest,*second_largest);
}

int main()
{
    int arr[N],max,second_max,*ptr;
    ptr=arr;
    printf("Enter %d elements: ",N);

    for(int i=0; i<N; i++)
        scanf("%d",&arr[i]);
    max=second_max=arr[0]; //could define this inside the function as: *largest=*second_largest=*a;

    find_two_largest(ptr,N,&max,&second_max);
}
