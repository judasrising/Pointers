#include<stdio.h>

void bubbleSort(int *const array,int size)
{
    void swap(int *ptr1,int *ptr2);


    int i,j;
    for(i=0; i<size-1; i++){
        for(j=0; j<size-1; j++){
            if(array[j]>array[j+1])
                swap(&array[j],&array[j+1]);
        }
    }
    
    /*****************************************
    
    int *p,i,temp;

    for(i=0; i<size-1; i++){
        for(p=array; p<array+size-1; p++){
            if(*p>*(p+1)){
                temp=*p;
                *p=*(p+1);
                *(p+1)=temp;
            }
        }
    }
    
    *******************************************/
}

void swap(int *ptr1,int *ptr2)
{
    int temp;
    temp=*ptr1;
    *ptr1=*ptr2;
    *ptr2=temp;
}

int main()
{
    int size;
    printf("Enter array size: ");scanf("%d",&size);
    int arr[size];
    printf("Enter %d element: ",size);
    for(int i=0; i<size; i++)
        scanf("%d",&arr[i]);

    printf("\nData items in original order: ");
    for(int i=0; i<size; i++)
        printf("%d ",arr[i]);

    bubbleSort(arr,size);

    printf("\nData items in sorted order: ");
    for(int i=0; i<size; i++)
        printf("%d ",arr[i]);

}


**************************** Easier Way **********************************

#include<stdio.h>
#define N 10

int main()
{
    int *a,i,j,temp,arr[N];

    printf("Enter %d numbers: ",N);
    for(i=0; i<N; i++)
         scanf("%d",&arr[i]);

    printf("\nYour array: ");
    for(i=0; i<N; i++)
        printf("%d ",arr[i]);

    for(i=0; i<N; i++){
        for(a=arr; a<arr+N; a++){
            if(*a>*(a+1)){
                temp=*a;
                *a=*(a+1);
                *(a+1)=temp;
            }
        }
    }

    printf("\n\nAfter sorting: ");
    for(i=0; i<N; i++)
        printf("%d ",arr[i]);

    printf("\n");
}
